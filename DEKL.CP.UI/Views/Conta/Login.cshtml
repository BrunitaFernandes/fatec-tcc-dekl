@model DEKL.CP.UI.ViewModels.LoginVM
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <form class="col-md-6 col-sm-12" method="post">
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", autofocus = "" })
            <small>
                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
            </small>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
            <small>
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
            </small>
        </div>
        <div class="form-group form-check">
            @Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-check-input" })
            @Html.LabelFor(model => model.RememberMe)
        </div>
        <div class="form-group">
            <button class="btn btn-outline-secondary">
                Login
            </button>
            <a class="btn btn-outline-warning" href="@Url.Action("Index","Home")">Cancelar</a>
        </div>
    </form>
</div>
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}