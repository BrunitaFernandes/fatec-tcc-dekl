@model DEKL.CP.UI.ViewModels.MeuPerfil

@{
    ViewBag.Title = "Meu Perfil";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <form class="col-md-6 col-sm-12" method="post">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            <small>
                @Html.ValidationMessageFor(model => model.Nome, null, new { @class = "text-danger" })
            </small>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Sobrenome)
            @Html.TextBoxFor(model => model.Sobrenome, new { @class = "form-control" })
            <small>
                @Html.ValidationMessageFor(model => model.Sobrenome, null, new { @class = "text-danger" })
            </small>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DataCadastro)
            @Html.TextBoxFor(model => model.DataCadastro, new { @class = "form-control", @readonly = "" })
        </div>
        <div class="form-group">
            <button class="btn btn-outline-secondary">
                Confirmar
            </button>
            <a class="btn btn-outline-warning" href="@Request.UrlReferrer">Cancelar</a>
        </div>
    </form>
</div>