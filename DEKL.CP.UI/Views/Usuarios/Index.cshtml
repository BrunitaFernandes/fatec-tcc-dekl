@model List<DEKL.CP.Domain.Entities.Usuario>
@{
    ViewBag.Title = "Usuários";
}

<h2>@ViewBag.Title</h2>

<div class="mb-3">
    <a class="btn btn-outline-info" href="@Url.Action("Add")">Novo Usuário</a>
</div>

<table class="table table-striped table-hover table-responsive-sm p-3">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>E-mail</th>
            <th>Data do Cadastro</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var usuario in Model)
        {
            <tr id="usuario-@usuario.Id">
                <td>@usuario.Nome</td>
                <td>@usuario.Sobrenome</td>
                <td>@usuario.Email</td>
                <td>@usuario.DataCadastro</td>
                <td class="btn-group">
                    <a class="btn btn-sm btn-outline-success" href="@Url.Action("Add",new { id=usuario.Id})"><i class="fas fa-edit"></i> Editar</a>
                    <button class="btn btn-sm btn-outline-danger" onclick="DelProd(@usuario.Id, '@usuario.Nome')"><i class="fas fa-trash"></i> Excluir</button>
                </td>
            </tr>
        }


    </tbody>
</table>
