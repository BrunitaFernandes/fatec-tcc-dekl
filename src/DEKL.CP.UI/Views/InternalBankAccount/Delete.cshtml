@model DEKL.CP.UI.ViewModels.InternalBankAccount.InternalBankAccountViewModel
@{
    ViewBag.Title = "Excluir Conta Bancária";
}

<style>
    .group {
        padding-top: 20px;
    }
</style>

<h2>@ViewBag.Title</h2>
<h3>Tem certeza que você quer deletar essa conta bancária? </h3>

<div class="group">
    <h4>Conta Bancária</h4>
    <hr />
    @Html.ValidationMessage("Error", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Name)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(m => m.Number)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Number)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" class="btn btn-danger" value="Excluir" />
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
        </div>
    }
</div>