@model IEnumerable<DEKL.CP.UI.ViewModels.UsuarioVM>
@{
    ViewBag.Title = "Usuários";
}

<h2>@ViewBag.Title</h2>

<div class="mb-3">
    <a class="btn btn-outline-info" href="@Url.Action("AddEdit")">Novo Usuário</a>
</div>

<table class="table table-striped table-hover table-responsive-sm p-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Sobrenome)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Ativo)</th>
            <th>@Html.DisplayNameFor(model => model.Administrador)</th>
            <th>@Html.DisplayNameFor(model => model.DataCadastro)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var usuario in Model)
        {
        <tr id="usuario-@usuario.Id">
            <td>@Html.DisplayFor(modelItem => usuario.Nome)</td>
            <td>@Html.DisplayFor(modelItem => usuario.Sobrenome)</td>
            <td>@Html.DisplayFor(modelItem => usuario.Email)</td>
            <td>@(usuario.Ativo ? "Sim" : "Não")</td>
            <td>@(usuario.Administrador ? "Sim" : "Não")</td>
            <td>@Html.DisplayFor(modelItem => usuario.DataCadastro)</td>
            <td class="btn-group">
                <a class="btn btn-sm btn-outline-success" href="@Url.Action("AddEdit",new { id=usuario.Id})"><i class="fas fa-edit"></i> Editar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
