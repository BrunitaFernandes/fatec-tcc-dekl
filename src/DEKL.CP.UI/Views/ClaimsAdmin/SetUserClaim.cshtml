
@using DEKL.CP.Infra.CrossCutting.Identity.Models
@model DEKL.CP.Infra.CrossCutting.Identity.ViewModels.ClaimViewModel
@{
    ViewBag.Title = "Associar Funcionalidade";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6">
        <section id="atribuiClaimToUser">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })

                    <h4>Atribua uma nova funcionalidade para o usuário <strong>@ViewBag.User.FirstName @(ViewBag.User.LastName ?? string.Empty)</strong></h4>
                    @{
                        ApplicationUser user = ViewBag.User;
                    }

                    @Html.Hidden("id", user.Id)

                    <div class="form-group">
                        @Html.LabelFor(m => m.Type, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.Type, Model.Types, "Selecione a Funcionalidade", new { @class = "form-control" })
                        <small>
                            @Html.ValidationMessageFor(m => m.Type, null, new { @class = "text-danger" })
                        </small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Value, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
                        <small>
                            @Html.ValidationMessageFor(m => m.Value, null, new { @class = "text-danger" })
                        </small>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Associar" class="btn btn-info" />
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}