@model DEKL.CP.Infra.CrossCutting.Identity.Models.Claim
@{
    ViewBag.Title = "Cadastrar novo Papel";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6">
        <section id="createClaimForm">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <h4>Preencha os dados</h4>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        <small>
                            @Html.ValidationMessageFor(m => m.Name)
                        </small>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-info" />
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            }
        </section>
    </div>
</div>
