
@{
    ViewBag.Title = "Cadastrar Fornecedor";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6">
        <section id="registerProviderForm">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form">
                    <h4>Selecione o tipo de Fornecedor</h4>
                    <hr />
                    @Html.ValidationMessage("Error", new { @class = "text-danger" })
                    <div class="form-row">
                        <div class="form-group">
                            <label>Tipo de Fornecedor</label>
                            <div class="custom-control custom-radio">
                                <input class="custom-control-input" type="radio" id="physicalperson" name="typeprovider" value="1" checked>
                                <label class="custom-control-label" for="physicalperson">Pessoa Física</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input class="custom-control-input" type="radio" id="legalperson" name="typeprovider" value="2">
                                <label class="custom-control-label" for="legalperson">Pessoa Jurídica</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <input type="submit" value="Confirmar" class="btn btn-info" />
                            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}