@model DEKL.CP.Infra.CrossCutting.Identity.ViewModels.SendCodeViewModel
@{
    ViewBag.Title = "Enviar código de verificação";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-6">
        <section id="sendCodeForm">
            @using (Html.BeginForm("SendCode", "Account", new { Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationMessage("Error", new { @class = "text-danger" })
                <div>
                    Provedor de Autenticação em Dois Fatores:
                    @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                    @Html.HiddenFor(m => m.UserId)
                    <input type="submit" value="Enviar" class="btn btn-outline-info" />
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
