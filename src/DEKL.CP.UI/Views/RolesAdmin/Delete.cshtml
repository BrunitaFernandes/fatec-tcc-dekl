@model DEKL.CP.Infra.CrossCutting.Identity.Models.CustomRole
@{
    ViewBag.Title = "Excluir Grupo";
}

<style>
    .group {
        padding-top: 20px;
    }
</style>

<h2>@ViewBag.Title</h2>
<h3>Tem certeza que você quer deletar esse Grupo? </h3>
<i>Deletando esse grupo você irá remover todos os usuários desse grupo. Isso não remove os usuários.</i>

<div class="group">
    <h4>Grupo</h4>
    <hr />
    @Html.ValidationMessage("Error", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Name)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Name)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" class="btn btn-outline-danger" value="Deletar" />
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-outline-info" })
        </div>
    }
</div>
