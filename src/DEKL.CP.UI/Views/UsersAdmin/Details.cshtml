@model DEKL.CP.Infra.CrossCutting.Identity.Models.ApplicationUser

@{
    ViewBag.Title = "Detalhes";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<h4>Lista de Grupos para este usuário</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>Usuário não pertence a nenhum Grupo.</p>
}
else
{
    <table class="table">

        @foreach (var item in ViewBag.RoleNames)
        {
            <tr>
                <td>
                    @item
                </td>
            </tr>
        }
    </table>
}

<h4>Lista de Papéis para este usuário</h4>

@if (ViewBag.Claims.Count == 0)
{
    <hr />
    <p>Usuário não possui nenhum Papel.</p>
}
else
{
    <table class="table">
        <tr class="table-bordered">
            <td>
                <b>Nome do Papel</b>
            </td>
            <td>
                <b>Valor do Papel</b>
            </td>
        </tr>

        @foreach (var item in ViewBag.Claims)
        {
            <tr>
                <td>
                    @item.Type
                </td>
                <td>
                    @item.Value
                </td>
            </tr>
        }
    </table>
}

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
</p>



