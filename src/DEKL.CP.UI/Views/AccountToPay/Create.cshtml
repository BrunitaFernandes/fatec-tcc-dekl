@model DEKL.CP.UI.ViewModels.AccountsToPay.AccountToPayViewModel
@{
    ViewBag.Title = "Cadastrar nova Conta";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6">
        <section id="registerAccountToPayForm">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form">
                    <h4>Preencha os dados</h4>
                    <hr />
                    @Html.ValidationMessage("Error", new { @class = "text-danger" })
                    <div class="form-row">
                        <div class="form-group col-md-9">
                            @Html.LabelFor(m => m.SelectedProviderId, "Fornecedor", new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.SelectedProviderId, new SelectList(Model.Providers, "Email", "Email"), "Selecione o Fornecedor", new { @class = "form-control" })
                            <small>
                                @Html.ValidationMessageFor(m => m.SelectedProviderId)
                            </small>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(m => m.Vencimento, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Vencimento, new { @class = "form-control", placeholder = "Data do vencimento" })
                            <small>
                                @Html.ValidationMessageFor(m => m.Vencimento)
                            </small>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            @Html.LabelFor(m => m.Parcelas, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Parcelas, new { @class = "form-control" })
                            <small>
                                @Html.ValidationMessageFor(m => m.Parcelas)
                            </small>
                        </div>
                        <div class="form-group col-md-2">
                            @Html.LabelFor(m => m.Prazo, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Prazo, new { @class = "form-control" })
                            <small>
                                @Html.ValidationMessageFor(m => m.Prazo)
                            </small>
                        </div>
                        <div class="form-group col-md-2">
                            @Html.LabelFor(m => m.Mora, new { @class = "control-label" })
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Mora, new { @class = "form-control" })
                                <div class="input-group-append">
                                    <span class="input-group-text">%</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            @Html.LabelFor(m => m.Multa, new { @class = "control-label" })
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Multa, new { @class = "form-control" })
                                <div class="input-group-append">
                                    <span class="input-group-text">%</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(m => m.Valor, new { @class = "control-label" })
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Multa, new { @class = "form-control" })
                                <div class="input-group-append">
                                    <span class="input-group-text">R$</span>
                                </div>
                            </div>
                            <small>
                                @Html.ValidationMessageFor(m => m.Valor)
                            </small>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-7">
                            @Html.LabelFor(m => m.Documento, new { @class = "control-label" })
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Documento, new { @class = "form-control" })
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fas fa-barcode" style="padding:0"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-5">
                            @Html.LabelFor(m => m.Prioridade, "Prioridade", new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.Prioridade, new SelectList(Model.Prioridade), new { @class = "form-control" })
                            <small>
                                @Html.ValidationMessageFor(m => m.Prioridade)
                            </small>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            @Html.LabelFor(m => m.Descricao, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control", placeholder = "Identificação da conta" })
                            <small>
                                @Html.ValidationMessageFor(m => m.Valor)
                            </small>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.Mensal, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.Mensal, "Conta Mensal", new { @class = "form-check-label" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info" value="Criar" />
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
