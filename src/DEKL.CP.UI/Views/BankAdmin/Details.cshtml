@model DEKL.CP.UI.ViewModels.Bank.BankViewModel

@{
    ViewBag.Title = "Detalhes";
}

<h2>@ViewBag.Title</h2>
<div>
    <h4>Bancos</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Name)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(m => m.Number)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Number)
        </dd>
    </dl>
</div>
<h4>Lista de Agências que pertencem a esse banco</h4>
@if (Model.BankAgencies.Count == 0)
{
    <hr/>
    <p>Não há agências que pertencem a esse banco</p>
}

<table class="table">

    @foreach (var item in Model.BankAgencies)
    {
    <tr>
        <td>@item.Number</td>
        <td>@item.ManagerName</td>
        <td>@item.PhoneNumber</td>
    </tr>
    }
</table>
<p>
    @Html.ActionLink("Editar", "Edit", new {id = Model.Id}, new {@class = "btn btn-info"})
    @Html.ActionLink("Voltar", "Index", null, new {@class = "btn btn-info"})
</p>